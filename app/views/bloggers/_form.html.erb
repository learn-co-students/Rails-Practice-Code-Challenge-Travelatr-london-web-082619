<%= form_for @blogger do |f| %>

  <% if @blogger.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @blogger.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= f.label :name %>
<%= f.text_field :name %> <br><br>

<%= f.label :bio %>
<%= f.text_area :bio %> <br><br>

<%= f.label :age %>
<%= f.number_field :age %> <br><br>

<%= f.submit %> <br><br>

<% end %>