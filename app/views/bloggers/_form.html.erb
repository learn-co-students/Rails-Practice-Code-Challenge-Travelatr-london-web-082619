
<%= form_for(@blogger) do |f| %>

    <% if @blogger.errors.any? %>
        <h3>There were some errors:</h3>
        <ul>
            <% @blogger.errors.full_messages.each do |message| %>
                <li><%= message %></li>    
            <% end %>
        </ul>
    <% end %>
    


    <%= f.label "Name" %> <br>
    <%= f.text_field :name%> <br> <br>

    <%= f.label "bio" %> <br>
    <%= f.text_area :bio%> <br> <br>


    <%= f.label "age" %> <br>
    <%= f.number_field :age%> <br> <br>

    
    <%= f.submit %>
<% end %>
