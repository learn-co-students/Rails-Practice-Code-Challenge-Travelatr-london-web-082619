<h1>Create blogger</h1>

<% if @blogger.errors.any? %>
  <p>The following errors occurred:</p>
  <ul>
    <% @blogger.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @blogger do |f| %>
  <%= f.label :name %> <br>
  <%= f.text_field :name %> <br>
  <br>

  <%= f.label :bio %> <br>
  <%= f.text_field :bio %> <br>
  <br>

  <%= f.label :age %> <br>
  <%= f.number_field :age %> <br>
  <br>

  <%= f.submit %>
<% end %>

