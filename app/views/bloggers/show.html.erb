<h1><%= @blogger.name %></h1>
<p><%= @blogger.bio %></p>

<% if @blogger.posts.any? %>
  <p>Total likes: <%= @blogger.total_likes %></p>
  <p>Featured post: <%= link_to @featured_post.title, post_path(@featured_post) %></p>
  <p>Top destinations:</p>
  <ul>
    <% @top_5_destinations.each do |destination| %>
      <li><%= destination.name %></li>
    <% end %>
  </ul>
<% end %>