<h1><%= @post.title %></h1>
<table style="width:50%">
<tr><td><%= @post.content %></td></tr>
</table>

<table style="width:50%">
<tr>
<th>Author</th>
<th>Destination</th>
<th>Likes</th>
</tr>
<tr>
<td>
<%= link_to @author.name, blogger_path(@author)  %></td>
<td><%= link_to @destination.name, destination_path(@destination) %></td>
<td><%= @likes %> <br>
<%= button_to "Like", { action: "like", id: @post.id }, method: "patch" %>
</tr>
</table>
