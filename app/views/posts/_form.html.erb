<%= form_for(@post) do |f| %>
<br><% if @post.errors.any? %>
    <div id="error_explanation">
      <h3>There were some errors:</h3>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      
      <% end %>
      
    </div>
<%= f.label :title %> <br>
<%= f.text_field :title %> <br> <br>

<%= f.label :content %> <br>
<%= f.text_area :content %> <br> <br>

<%= f.collection_select :blogger_id, Blogger.all, :id, :name %> <br> <br>
<%= f.collection_select :destination_id, Destination.all, :id, :name %>

<%= f.submit %>

<% end %>