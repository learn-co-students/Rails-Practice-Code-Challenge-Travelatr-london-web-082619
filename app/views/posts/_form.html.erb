
<%= form_for(@post) do |f| %>

    <% if @post.errors.any? %>
        <h3>There is <%= pluralize(@post.errors.full_messages.length, "error") %>:</h3>
        <ul>
            <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>    
            <% end %>
        </ul>
    <% end %>
    


    <%= f.label "Title" %> <br>
    <%= f.text_field :title%> <br> <br>

    <%= f.label "Content" %> <br>
    <%= f.text_area :content%> <br> <br>

    <% if !@post.id %>
        <%= f.label "Blogger" %> <br>
        <%= f.collection_select :blogger_id, Blogger.all, :id, :name%> <br> <br>

        <%= f.label "Destination" %> <br>
        <%= f.collection_select :destination_id, Destination.all, :id, :name%> <br> <br>
    <% end %>
    
    <%= f.submit %>
<% end %>