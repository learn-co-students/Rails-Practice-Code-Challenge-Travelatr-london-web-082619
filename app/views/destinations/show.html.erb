<%= @destination.name %><br>
<%= @destination.country %><br>
<p> Recent Posts: </p>
<ul>
    <% @destination.posts.last(5).each do |post| %>
        <li> <%= post.title %> </li>
        <li> <%= post.content %> </li>
    <% end %>
</ul>

<%= link_to "Featured post", post_path(@destination.posts.max_by {|post| post.likes}.id) %>
<p> Average age: <%= @destination.bloggers.sum {|m| m.age } / @destination.bloggers.length %> </p>

<ul>
    <% @destination.bloggers.map do |m| %>
        <li><%= m.age %></li>
    <% end %>
</ul>  
